<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_recordsList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal"
    android:padding="@dimen/item_recordList_padding">

    <TextView
        android:id="@+id/item_recordList_tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="@color/colorPrimary"
        tools:text="Name" />

    <TextView
        android:id="@+id/item_recordList_tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="@color/colorPrimary"
        tools:text="Time" />

    <TextView
        android:id="@+id/item_recordList_tv_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="@color/colorPrimary"
        tools:text="Distance" />

    <ImageButton
        android:id="@+id/item_recordList_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@string/contentDesc_deleteUser"
        android:gravity="end"
        android:padding="@dimen/item_recordList_padding"
        android:src="@android:drawable/ic_menu_delete" />
</LinearLayout>
